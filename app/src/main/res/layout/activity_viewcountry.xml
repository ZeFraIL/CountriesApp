<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF05102C"
    tools:context=".ViewCoutry">

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacificoregular"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="#FFF8FF"
        android:text="TextView" />

    <TextView
        android:id="@+id/Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itimregular"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="#FFF8FF"
        android:text="TextView" />

    <TextView
        android:id="@+id/Capitol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itimregular"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="#FFF8FF"
        android:layout_marginBottom="10dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#FFF8FF"
            android:text="Flag:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#FFF8FF"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="Symbol:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cFlag"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@drawable/brazilflag" />

        <ImageView
            android:id="@+id/cSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="40dp"
            tools:srcCompat="@drawable/brazilsymbol" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/Anthem"
        android:layout_width="74dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/speaker" />

    <Button
        android:id="@+id/Link"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/itimregular"
        android:gravity="center_horizontal"
        android:text="Site"
        android:textColor="#FFF8FF"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />
</LinearLayout>